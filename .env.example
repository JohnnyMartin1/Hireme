# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hireme?schema=public"

# Firebase Client (Next.js Public)
NEXT_PUBLIC_FIREBASE_API_KEY="your_firebase_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"

# Firebase Admin (Server-side)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# AWS S3 (Optional - for file uploads)
S3_REGION="us-east-1"
S3_BUCKET="your-bucket-name"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"

# Email Configuration (Choose one)
# Option 1: Resend (Recommended for production)
RESEND_API_KEY="your_resend_api_key_here"
EMAIL_FROM="noreply@yourdomain.com"

# Option 2: Gmail SMTP
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your_gmail_app_password"

# Option 3: Generic SMTP
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your_smtp_user"
SMTP_PASS="your_smtp_password"

# Option 4: Development (Mailpit/Mailhog)
EMAIL_HOST="localhost"
EMAIL_PORT="1025"
EMAIL_USER=""
EMAIL_PASS=""

# Application URLs
# For production, set to your actual domain (e.g., https://yourdomain.com)
# For Vercel, you can use VERCEL_URL which is auto-populated
NEXTAUTH_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"
